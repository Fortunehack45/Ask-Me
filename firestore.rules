rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user is accessing their own data
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    // Check if user is the specific admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'fortunedomination@gmail.com';
    }

    // Users: 
    // - Read: Public (to see profiles)
    // - Write: Own data only
    match /users/{uid} {
      allow read: if true;
      allow write: if isOwner(uid);
    }

    // Questions:
    // - Create: Public (Anonymous users can send questions)
    // - Read: Only the receiver can read their inbox
    // - Update/Delete: Receiver can mark as answered or delete
    match /questions/{questionId} {
      allow create: if true;
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.receiverId || isAdmin());
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.receiverId;
    }

    // Answers:
    // - Create: User can answer questions sent to them
    // - Read: Public (Feed)
    // - Update/Delete: Owner only
    match /answers/{answerId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
  }
}